<?xml version="1.0"?>
<config>
    <modules>
        <Magestore_Mageinstaller>
            <version>0.1.0</version>
        </Magestore_Mageinstaller>
    </modules>

    <admin>
        <routers>
			<mageinstaller>
				<use>admin</use>
				<args>
					<module>Magestore_Mageinstaller</module>
					<frontName>mageinstaller</frontName>
				</args>
			</mageinstaller>
        </routers>
    </admin>
	
    <adminhtml>
		<menu>
			<system>          
				<children>
					<mageinstaller module="mageinstaller">
						<title>Mage Installer</title>
						<sort_order>100</sort_order>
						<action>mageinstaller/adminhtml_mageinstaller</action>
					</mageinstaller>
				</children>
			</system>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Magestore_Mageinstaller>
							<title>Mageinstaller Module</title>
							<sort_order>10</sort_order>
						</Magestore_Mageinstaller>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<mageinstaller>
					<file>mageinstaller.xml</file>
				</mageinstaller>
			</updates>
		</layout>		
    </adminhtml>   
	
    <global>
        <models>
            <mageinstaller>
                <class>Magestore_Mageinstaller_Model</class>
                <resourceModel>mageinstaller_mysql4</resourceModel>
            </mageinstaller>
            <mageinstaller_mysql4>
                <class>Magestore_Mageinstaller_Model_Mysql4</class>
                <entities>
                    <extension>
                        <table>mageinstaller_extension</table>
                    </extension>
                    <file>
                        <table>mageinstaller_extension_file</table>
                    </file>					
                </entities>
            </mageinstaller_mysql4>
        </models>
        <resources>
            <mageinstaller_setup>
                <setup>
                    <module>Magestore_Mageinstaller</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mageinstaller_setup>
            <mageinstaller_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mageinstaller_write>
            <mageinstaller_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mageinstaller_read>
        </resources>
        <blocks>
            <mageinstaller>
                <class>Magestore_Mageinstaller_Block</class>
            </mageinstaller>
        </blocks>		
        <helpers>
            <mageinstaller>
                <class>Magestore_Mageinstaller_Helper</class>
            </mageinstaller>
        </helpers>
    </global>
	
</config>